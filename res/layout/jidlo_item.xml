<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selection_event"
        android:padding="15dp">	    
        <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="22sp"
	        android:paddingBottom="15dp"
	        android:id="@+id/jidlo_item_day"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_below="@+id/jidlo_item_day"
            android:orientation="vertical">
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingBottom="5dp"
		        android:id="@+id/jidlo_item_polevka"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingBottom="5dp"
		        android:id="@+id/jidlo_item_menu1"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingBottom="5dp"
		        android:id="@+id/jidlo_item_menu2"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:paddingBottom="5dp"
		        android:id="@+id/jidlo_item_menu3"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:textSize="14sp"
		        android:id="@+id/jidlo_item_desert"/>
	    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
